<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:wallet="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:orientation="vertical"
tools:context="com.example.brianscott.caresit.UserHome"
android:weightSum="1">


    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="51dp"
    android:gravity="center_horizontal">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="logout"
        android:id="@+id/logoutButton"
        android:onClick="logoutButtonPressed"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="edit profile"
        android:id="@+id/button3"
        android:onClick="editProfileButtonPressed"
        android:nestedScrollingEnabled="false" />
</LinearLayout>

<ListView
    android:layout_width="wrap_content"
    android:layout_height="92dp"
    android:id="@+id/notAcceptedLV"
    android:backgroundTint="#b4adad"
    android:layout_weight="0.23" />

<ListView
    android:layout_width="match_parent"
    android:layout_height="74dp"
    android:id="@+id/notCompletedLV"
    android:backgroundTint="#c13b3b"
    android:layout_gravity="center_horizontal"
    android:layout_weight="0.21" />

<ListView
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:id="@+id/completedLV"
    android:backgroundTint="#0f44d5"
    android:layout_gravity="center_horizontal"
    android:layout_weight="0.32" />

</LinearLayout>

